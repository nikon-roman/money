<div class="container text-left">
  <%= form_with(model: operation) do |form| %>
    <% if operation.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

        <ul>
          <% operation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.radio_button :type_operation, "Розхід" %>
      <%= form.label :type_operation, "Розхід" %>
      <%= form.radio_button :type_operation, "Дохід" %>
      <%= form.label :type_operation, "Дохід" %>
    </div>  
    
    <div>
      <%= form.label :amount, style: "display: block" %>
      <%= form.text_field :amount %>
    </div>

    <div>
      <%= form.label :odate, style: "display: block" %>
      <%= form.datetime_field :odate %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description %>
    </div>

    <div>
      <%= form.label :category_id, style: "display: block" %>
      <%= form.select :category_id, Category.pluck(:name,:id) %>
    </div>
    <br>
    <div>
      <%= form.submit class:"btn btn-outline-secondary"%>
    </div>
  <% end %>
</div>